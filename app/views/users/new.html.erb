<div class="ui centered grid">
  <div class="row"></div>
  <div class="row">
    <div class="four wide column">
      <h2 class="ui teal image header">
        <div class="content">Complete form to Sign Up</div>
      </h2>

      <%= render 'shared/errors' %>

      <%= simple_form_for @user, url: '/users/create', html: { class: 'ui large form' } do |f| %>
          <%= render 'shared/fields', f: f %>
          <%= f.submit 'Save', class: "ui teal button" %>
      <% end %>
    </div>
  </div>
</div>

