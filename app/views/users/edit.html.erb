<div class="ui centered grid">
  <div class="row"></div>
  <div class="row">
    <div class="four wide column">
      <h2 class="ui teal image header">
        <div class="content">Edit profile</div>
      </h2>

      <%= render 'shared/errors' %>

      <%= simple_form_for @user, url: '/users/update', html: { class: 'ui large form' } do |f| %>
        <div class="ui stacked segment">
          <%= f.input :email, wrapper_html: { class: 'field' } %>
          <%= f.input :first_name, wrapper_html: { class: 'field' } %>
          <%= f.input :last_name, wrapper_html: { class: 'field' } %>
          <%= f.input :uid, as: :hidden, input_html: { value: @user.uid } %>
          <%= f.submit 'Save', class: "ui teal button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
